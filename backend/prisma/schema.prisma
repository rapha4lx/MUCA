generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  email         String?   @unique
  name          String?
  password      String?
  walletAddress String?   @unique
}

model KittyWallets {
  wallet        String
  percentage    Int
  kittyId       String
  kitty         Kitty     @relation(fields: [kittyId], references: [id])

  @@id([wallet, kittyId])
}

model Donation {
  id        String   @id @default(uuid())
  wallet    String
  token     String
  amount    Decimal  @db.Decimal(65, 8)
  createdAt DateTime @default(now())
  kittyId   String

  kitty     Kitty    @relation(fields: [kittyId], references: [id])
}

model Kitty {
  id            String       @id @default(uuid())
  createAt      DateTime     @default(now())
  name          String
  wallets       KittyWallets[]
  
  currentValue  Decimal      @default(0.00) @db.Decimal(65, 2)
  maxValue      Decimal      @default(100.00) @db.Decimal(65, 2)

  donations     Donation[]
}
